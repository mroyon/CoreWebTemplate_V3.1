<!DOCTYPE html>
@{

}

<html lang="en" dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - BlackPortalWebFront</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">
    @{
        if (System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft)
        {
            <link rel="stylesheet" href="~/css/vendor.rtl.min.css" asp-append-version="true" />
        }
        else
        {
            <link rel="stylesheet" href="~/css/vendor.min.css" asp-append-version="true" />        
        }
    }
    
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

</head>
<body>
    @await Component.InvokeAsync("Header", new { headertag = "headertag" })

    @await Component.InvokeAsync("Banner", new { bannertag = "bannertag" })

    <main id="main">

        @await Component.InvokeAsync("CategoryAdd", new { categoryaddtag = "categoryaddtag" })

        @*@await Component.InvokeAsync("Service", new { servicetag = "servicetag" })

            @await Component.InvokeAsync("AboutUs", new { aboutustag = "aboutustag" })

            @await Component.InvokeAsync("Services", new { servicestag = "servicestag" })

            @await Component.InvokeAsync("Appointment", new { appointmenttag = "appointmenttag" })

            @await Component.InvokeAsync("Testimonials", new { testimonialstag = "testimonialstag" })

            @await Component.InvokeAsync("Departments", new { departmentstag = "departmentstag" })

            @await Component.InvokeAsync("Doctors", new { doctorstag = "doctorstag" })

            @await Component.InvokeAsync("Gallery", new { gallerytag = "gallerytag" })

            @await Component.InvokeAsync("Pricing", new { pricingtag = "pricingtag" })

            @await Component.InvokeAsync("Faq", new { faqtag = "faqtag" })

            @await Component.InvokeAsync("Features", new { featurestag = "featurestag" })

            @await Component.InvokeAsync("Counter", new { countertag = "countertag" })*@


        @await Component.InvokeAsync("ContactUs", new { contactustag = "contactustag" })

    </main><!-- End #main -->
    @await Component.InvokeAsync("Footer", new { footertag = "footertag" })

    <div id="preloader"></div>
    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/vendor.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>


    @RenderSection("scripts", required: false)
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script type="text/javascript" src="~/js/contactUs.js"></script>
</body>
</html>
